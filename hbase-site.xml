</property>    

<property>
  <name>hbase.balancer.period</name>
  <value>3000</value>
</property>    
<property>
  <name>hbase.master.loadbalancer.class</name>
  <value>org.apache.hadoop.hbase.master.balancer.LocalityAwareLoadBalancer</value>
</property>    
