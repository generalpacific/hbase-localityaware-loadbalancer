<configuration>

<property>
  <name>hbase.cluster.distributed</name>
  <value>true</value>
</property>

<property>
  <name>hbase.rootdir</name>
  <value>hdfs://x41-umh-1a:54310/hbase</value>
</property>  

<property>
  <name>hbase.zookeeper.quorum</name>
  <value>x41-umh-1a,x41-umh-1b,x41-umh-1c,x41-umh-1d</value>
</property>
<property>
  <name>hbase.zookeeper.property.dataDir</name>
